{
  "name": "tracking-api",
  "version": "1.0.0",
  "description": "Tracking API with Fastify and TypeScript",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:debug": "tsx --inspect-brk watch src/server.ts",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=integration --passWithNoTests",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "typeorm": "tsx ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm -- migration:run -d src/contexts/shared/infrastructure/orm.config.ts",
    "migration:generate": "npm run typeorm -- migration:generate -d src/contexts/shared/infrastructure/orm.config.ts",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:revert": "npm run typeorm -- migration:revert -d src/contexts/shared/infrastructure/orm.config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@sentry/node": "^10.15.0",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "fastify": "^4.24.3",
    "pg": "^8.16.0",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.24",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.4",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage"
  }
}
